{% extends "template.twig" %}

{% block main %}
<div class="jumbotron" style="margin-top:25px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm">
                <h3>Upcoming Fixtures</h3>
                <table class="table table-striped table-dark">
                    <tbody>
                    {% for fixture in fixtures %}
                        <tr class="">
                            <td>{{ fixture.date }}</td>
                            <td>{{ fixture.time }}</td>
                            <td align="right">{{ fixture.home }}</td>
                            <td align="center">vs</td>
                            <td>{{ fixture.away }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <h3>Latest Results</h3>
                <table class="table table-striped table-dark">
                    <tbody>
                    {% for result in results %}
                        <tr class="table-{{ resultParser.color(result) }}">
                            <td>{{ result.date }}</td>
                            <td>{{ resultParser.where(result) }}</td>
                            <td>{{ result.result }}</td>
                            <th scope="row" style="white-space: nowrap">{{ resultParser.team(result) }}</th>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-sm-6">
            <h2><a class="twitter-timeline" data-height="800" data-theme="dark"
                   href="https://twitter.com/trefelinbcg?ref_src=twsrc%5Etfw">Tweets by trefelinbcg</a></h2>
            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </h2>
        </div> <!-- /container -->
    </div>
</div>
{% endblock %}