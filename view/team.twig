{% extends "template.twig" %}

{% block main %}

    <div class="row">
        <h2>{{ team_name }}</h2>
    </div>

    <div class="row">
        <div class="col">
            <h4>Manager</h4>
        </div>
        <div class="col">
            <h4>{{ manager }}</h4>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h4>Home Kit</h4>
        </div>
        <div class="col">
            <h4>{{ home_kit }}</h4>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h4>Away Kit</h4>
        </div>
        <div class="col">
            <h4>{{ away_kit }}</h4>
        </div>
    </div>

    <hr/>

    <div class="row">
        <h2>Fixtures & Results</h2>
    </div>

    <div class="row">
        <div class="col-sm">
            <table class="table table-striped table-dark">
                <tbody>
                {% for fixture in fixtures %}
                    <tr class="table-{{ resultParser.color(fixture) }}">
                        <td>{{ fixture.date }}</td>
                        {% if fixture.result is same as('') %}
                            <td>{{ fixture.time }}</td>
                        {% endif %}
                        <td align="center">{{ fixture.home }} <br/>
                            vs <br/>
                            {{ fixture.away }}</td>
                        {% if fixture.result is not same as('') %}
                            <td align="right" style="white-space: nowrap;">{{ fixture.result }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}