{% extends "template.twig" %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <h2>First Team</h2>
        </div>

        <div class="row">
            <div class="col-2">
                <h3>Manager</h3>
            </div>
            <div class="col">
                <h3>Richard Ryan</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <h3>Home Kit</h3>
            </div>
            <div class="col">
                <h3>Red Shirts, Black Shorts</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <h3>Away Kit</h3>
            </div>
            <div class="col">
                <h3>Grey Shirts, Grey Shorts</h3>
            </div>
        </div>

        <hr/>

        <div class="row">
            <h2>Fixtures & Results</h2>
        </div>

        <div class="row">
            <div class="col-sm">
                <table class="table table-striped table-dark">
                    <tbody>
                    {% for fixture in fixtures %}
                        <tr class="table-{{ resultParser.color(fixture) }}">
                            <td>{{ fixture.date }}</td>
                            <td>{{ fixture.time }}</td>
                            <td align="right">{{ fixture.home }}</td>
                            <td align="center">vs</td>
                            <td>{{ fixture.away }}</td>
                            <td>{{ fixture.result }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}